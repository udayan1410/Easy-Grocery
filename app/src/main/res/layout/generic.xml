<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/onion" />

            <TextView
                android:id="@+id/groc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img"
                android:singleLine="true"
                android:text="Onion"
                android:textColor="#3e3c3c"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groc_name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/img"
                android:text="Price :"
                android:textColor="#3e3c3c"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groc_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groc_name"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/txt1"
                android:singleLine="true"
                android:text="Rs.255"
                android:textColor="#3e3c3c"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/img"
                android:text="Quantity :"
                android:textColor="#3e3c3c"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groc_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groc_price"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/txt2"
                android:singleLine="true"
                android:text="5"
                android:textColor="#3e3c3c"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groc_qty"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/img"
                android:text="Total Price :"
                android:textColor="#3e3c3c"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groc_qty"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/tot"
                android:singleLine="true"
                android:text="100"
                android:textColor="#3e3c3c"
                android:textSize="20dp" />


            <android.support.v7.widget.CardView
                android:id="@+id/deleteButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tot"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/img"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="#c91111"
                app:cardCornerRadius="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Delete"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>